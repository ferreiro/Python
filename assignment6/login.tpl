<form action="/login" method="post">
    <div>
        <label for="mail">
        	E-mail:
        </label>
        <input name="email" type="email" id="mail" placeholder="Your email" />
    </div>
    <div>
        <label for="password">
        	Password:
        </label>
        <input name="password" type="password" />
    </div>
    
    <div class="button">
        <button type="submit">Send your message</button>
    </div>
</form>